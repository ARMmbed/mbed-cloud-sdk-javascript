{
    "name": "Mbed Cloud SDK for JavaScript",
    "environments": [
        "node",
        "chrome"
    ],
    "node": {
        "suites": ["lib/_tests/**/*.js", "!lib/_tests/snippets/**"]
    },
    "browser": {
        "suites": ["bundles/_tests/**/*.js"]
    },
    "tunnelOptions": {
        "drivers": [
            {
                "name": "chrome",
                "version": "2.36"
            }
        ]
    },
    "coverage": [
        "lib/**/*.js",
        "!lib/_api/**",
        "!lib/_tests/**"
    ],
    "reporters+": [
        {
            "name": "jsoncoverage",
            "options": {
                "filename": "unit_coverage.json",
                "directory": "coverage"
            }
        },
        {
            "name": "junit",
            "options": {
                "filename": "junit.xml"
            }
        }
    ],
    "configs": {
        "snippets": {
            "environments": [
                "node"
            ],
            "node": {
                "suites": ["lib/_tests/snippets/**/*.js"]
            }
        }
    }
}
