{
    "name": "Mbed Cloud SDK for JavaScript",
    "environments": [
        "node",
        "chrome"
    ],
    "node": {
        "suites": "lib/_tests/**/*.js"
    },
    "browser": {
        "suites": "bundles/_tests/**/*.js"
    },
    "coverage": [
        "lib/**/*.js",
        "!lib/_api/**",
        "!lib/_tests/**"
    ],
    "reporters+": [
        "htmlcoverage",
        { "name": "lcov", "options": { "filename": "lcov.info" }},
        { "name": "junit", "options": { "filename": "junit.xml" }}
    ]
}
