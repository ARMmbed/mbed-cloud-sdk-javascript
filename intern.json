{
    "name": "Mbed Cloud SDK for JavaScript",
    "environments": [
        "node",
        "chrome"
    ],
    "node": {
        "suites": ["test/unit/build/test/unit/**/*.js", "!test/unit/build/test/unit/snippets/**"]
    },
    "browser": {
        "suites": ["bundles/_tests/**/*.js"]
    },
    "tunnelOptions": {
        "drivers": [
            {
                "name": "chrome",
                "version": "2.36"
            }
        ]
    },
    "coverage": [
        "test/unit/build/src/**/*.js",
        "!test/unit/build/src/_api/**"
    ],
    "reporters+": [
        {
            "name": "jsoncoverage",
            "options": {
                "filename": "unit_coverage.json",
                "directory": "coverage"
            }
        },
        {
            "name": "junit",
            "options": {
                "filename": "junit.xml"
            }
        }
    ],
    "configs": {
        "snippets": {
            "environments": [
                "node"
            ],
            "node": {
                "suites": ["test/unit/build/test/snippets/**/*.js"]
            }
        },
        "node" : {
            "environments": [
                "node"
            ],
            "node": {
                "suites": ["test/unit/build/test/unit/**/*.js", "!test/unit/build/test/unit/snippets/**"]
            }
        },
        "browser" : {
            "environments": [
                "chrome"
            ],
            "browser": {
                "suites": ["bundles/_tests/**/*.js"]
            }
        }
    }
}
